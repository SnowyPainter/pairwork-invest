{
  "name": "pairwork-invest",
  "version": "0.1.0",
  "private": true,
  "description": "Workflow scripts for backtesting, training, and analytics in the Pairwork Invest project.",
  "engines": {
    "pnpm": ">=8"
  },
  "scripts": {
    "py": "node scripts/run-python.mjs",
    "py:deps": "node scripts/run-python.mjs -m pip install -r requirements.txt",
    "train:direction": "node scripts/run-python.mjs models/M001_DirectionClassifier.py",
    "train:m002baseline": "node scripts/run-python.mjs models/M002_MultiTask.py",
    "backtest:m001": "node scripts/run-python.mjs backtester/backtest_m001.py",
    "backtest:direction": "node scripts/run-python.mjs backtester/backtest_direction_classifier.py",
    "backtest:m002baseline": "node scripts/run-python.mjs backtester/backtest_m002_baseline.py",
    "analytics:direction": "node scripts/run-python.mjs analytics/M001_DirectionClassifier.py",
    "features:m002:buyer": "node scripts/run-python.mjs features/generate_m002_visualizations.py --mode buyer",
    "features:m002:seller": "node scripts/run-python.mjs features/generate_m002_visualizations.py --mode seller",
    "features:m002:combined": "node scripts/run-python.mjs features/generate_m002_visualizations.py",
    "features:m002:visualize": "node scripts/run-python.mjs features/generate_m002_visualizations.py",
    "features:m002:analyze": "node scripts/run-python.mjs features/analyze_m002_episodes.py"
  }
}
